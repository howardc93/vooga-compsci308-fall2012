<?xml version="1.0"?>
<rpggame>
  <gameSetup>
    <dimension>
      <width>20</width>
      <height>30</height>
    </dimension>
    <cameraDimension>
      <width>15</width>
      <height>11</height>
    </cameraDimension>
    <backgroundImage>src/vooga/turnbased/resources/image/background.png</backgroundImage>
    <startMode>map1</startMode>
    <!-- map is hardcoded, required default value in XMLParser -->
  </gameSetup>
  <modeDeclarations>
    <mode>
      <name>battle</name>
      <class>vooga.turnbased.gamecore.gamemodes.BattleMode</class>
      <condition>dobattle</condition>
      <condition>should support multiple, conditions, and multiple comma separated, condition sets too</condition>
    </mode>
    <mode>
      <name>gameOver</name>
      <class>vooga.turnbased.gamecore.gamemodes.GameOverMode</class>
      <condition>endgame1,endgame2,endgame3,endgame4</condition>
    </mode>
    <mode>
      <name>map1</name>
      <class>vooga.turnbased.gamecore.gamemodes.MapMode</class>
      <condition>entermap1</condition>
    </mode>
    <mode>
      <name>map2</name>
      <class>vooga.turnbased.gamecore.gamemodes.MapMode</class>
      <condition>entermap2</condition>
    </mode>
    <mode>
      <name>option</name>
      <class>vooga.turnbased.gamecore.gamemodes.OptionMode</class>
      <condition>dooption</condition>
    </mode>
    <mode>
      <name>gameWon</name>
      <class>vooga.turnbased.gamecore.gamemodes.GameWonMode</class>
      <condition>wingame</condition>
    </mode>
  </modeDeclarations>
