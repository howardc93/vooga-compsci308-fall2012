<?xml version="1.0"?>
<rpggame>
  <gameSetup>
    <dimension>
      <width>10</width>
      <height>5</height>
    </dimension>
    <cameraDimension>
      <width>10</width>
      <height>5</height>
    </cameraDimension>
    <backgroundImage>src/vooga/turnbased/resources/image/background.png</backgroundImage>
    <startMode>map1</startMode>
    <!-- map is hardcoded, required default value in XMLParser -->
  </gameSetup>
  <modeDeclarations>
    <mode>
      <name>gameWon</name>
      <class>vooga.turnbased.gamecore.gamemodes.GameWonMode</class>
      <condition>answer1,answer2,answer4</condition>
    </mode>
    <mode>
      <name>gameOver</name>
      <class>vooga.turnbased.gamecore.gamemodes.GameOverMode</class>
      <condition>endgame</condition>
    </mode>
    <mode>
      <name>map1</name>
      <class>vooga.turnbased.gamecore.gamemodes.MapMode</class>
      <condition>entermap1</condition>
    </mode>
    <mode>
      <name>option1</name>
      <class>vooga.turnbased.gamecore.gamemodes.OptionMode</class>
      <condition>dooption1</condition>
    </mode>
    <mode>
      <name>option2</name>
      <class>vooga.turnbased.gamecore.gamemodes.OptionMode</class>
      <condition>dooption2</condition>
    </mode>
    <mode>
      <name>option3</name>
      <class>vooga.turnbased.gamecore.gamemodes.OptionMode</class>
      <condition>dooption3</condition>
    </mode>
    <mode>
      <name>option4</name>
      <class>vooga.turnbased.gamecore.gamemodes.OptionMode</class>
      <condition>dooption4</condition>
    </mode>
  </modeDeclarations>
  <spriteDeclarations>
    <sprite>
      <object>
        <createOn>start</createOn>
        <modes>map1</modes>
        <class>vooga.turnbased.gameobject.mapobject.MapObstacleObject</class>
        <condition>dooption1</condition>
        <param>
          <x>3</x>
          <y>2</y>
        </param>
        <image>src/vooga/turnbased/resources/image/questionanswergame/npc1.png</image>
      </object>
      <object>
        <createOn>start</createOn>
        <modes>option1</modes>
        <class>vooga.turnbased.gameobject.optionobject.OptionQuestionObject</class>
        <condition>NO_ACTION</condition>
        <param>
          <question>What is the capital of Ukraine?</question>
        </param>
      </object>
      <object>
        <createOn>start</createOn>
        <modes>option1</modes>
        <class>vooga.turnbased.gameobject.optionobject.OptionObject</class>
        <param>
        	<name>Warsaw</name>
        </param>
        <condition>endgame</condition>
      </object>
      <object>
        <createOn>start</createOn>
        <modes>option1</modes>
        <class>vooga.turnbased.gameobject.optionobject.OptionObject</class>
        <param>
          <name>Kyiv</name>
        </param>
        <condition>answer1</condition>
      </object>
      <object>
        <createOn>start</createOn>
        <modes>option1</modes>
        <class>vooga.turnbased.gameobject.optionobject.OptionObject</class>
        <param>
          <name>Amurica!</name>
        </param>
        <condition>endgame</condition>
      </object>
    </sprite>
    <sprite>
      <object>
        <createOn>start</createOn>
        <modes>map1</modes>
        <class>vooga.turnbased.gameobject.mapobject.MapObstacleObject</class>
        <condition>dooption2</condition>
        <param>
          <x>5</x>
          <y>2</y>
        </param>
        <image>src/vooga/turnbased/resources/image/questionanswergame/npc2.png</image>
      </object>
      <object>
        <createOn>start</createOn>
        <modes>option2</modes>
        <class>vooga.turnbased.gameobject.optionobject.OptionQuestionObject</class>
        <condition>NO_ACTION</condition>
        <param>
          <question>Select correct statement.</question>
        </param>
      </object>
      <object>
        <createOn>start</createOn>
        <modes>option2</modes>
        <class>vooga.turnbased.gameobject.optionobject.OptionObject</class>
        <param>
          <name>Stanford is better than Duke</name>
        </param>
        <condition>endgame</condition>
      </object>
      <object>
        <createOn>start</createOn>
        <modes>option2</modes>
        <class>vooga.turnbased.gameobject.optionobject.OptionObject</class>
        <param>
          <name>VOOGA rpg is awesome</name>
        </param>
        <condition>answer2</condition>
      </object>
      <object>
        <createOn>start</createOn>
        <modes>option2</modes>
        <class>vooga.turnbased.gameobject.optionobject.OptionObject</class>
        <param>
          <name>Damage to the endothelium causes vasodilation</name>
        </param>
        <condition>endgame</condition>
      </object>
    </sprite>
    <sprite>
      <object>
        <createOn>start</createOn>
        <modes>map1</modes>
        <class>vooga.turnbased.gameobject.mapobject.MapObstacleObject</class>
        <condition>dooption3</condition>
        <param>
          <x>7</x>
          <y>2</y>
        </param>
        <image>src/vooga/turnbased/resources/image/questionanswergame/npc3.png</image>
      </object>
      <object>
        <createOn>start</createOn>
        <modes>option3</modes>
        <class>vooga.turnbased.gameobject.optionobject.OptionQuestionObject</class>
        <condition>NO_ACTION</condition>
        <param>
          <question>Ready to win?</question>
        </param>
      </object>
      <object>
        <createOn>start</createOn>
        <modes>option3</modes>
        <class>vooga.turnbased.gameobject.optionobject.OptionObject</class>
        <param>
          <name>Yes</name>
        </param>
        <condition>dooption4</condition>
      </object>
      <object>
        <createOn>start</createOn>
        <modes>option3</modes>
        <class>vooga.turnbased.gameobject.optionobject.OptionObject</class>
        <param>
          <name>No</name>
        </param>
        <condition>endgame</condition>
      </object>
      <object>
        <createOn>start</createOn>
        <modes>option3</modes>
        <class>vooga.turnbased.gameobject.optionobject.OptionObject</class>
        <param>
          <name>I'm a potato!</name>
        </param>
        <condition>endgame</condition>
      </object>
    </sprite>
    <sprite>
      <object>
        <createOn>start</createOn>
        <modes>option4</modes>
        <class>vooga.turnbased.gameobject.optionobject.OptionQuestionObject</class>
        <condition>NO_ACTION</condition>
        <param>
          <question>Are you sure?</question>
        </param>
      </object>
      <object>
        <createOn>start</createOn>
        <modes>option4</modes>
        <class>vooga.turnbased.gameobject.optionobject.OptionObject</class>
        <param>
          <name>Yes</name>
        </param>
        <condition>answer4</condition>
      </object>
      <object>
        <createOn>start</createOn>
        <modes>option4</modes>
        <class>vooga.turnbased.gameobject.optionobject.OptionObject</class>
        <param>
          <name>No</name>
        </param>
        <condition>endgame</condition>
      </object>
    </sprite>
    <staticSprite>
      <class>vooga.turnbased.gameobject.mapobject.MapObject</class>
      <modes>map1</modes>
      <condition>NO_ACTION</condition>
      <image>src/vooga/turnbased/resources/image/questionanswergame/tile.jpg</image>
    </staticSprite>
    <player>
      <object>
        <modes>map1</modes>
        <class>vooga.turnbased.gameobject.mapobject.MapPlayerObject</class>
        <condition>NO_ACTION</condition>
        <param>
          <x>1</x>
          <y>1</y>
          <source>src/vooga/turnbased/resources/image/player/Down.png</source>
          <direction>down</direction>
          <source>src/vooga/turnbased/resources/image/player/Down1.png</source>
          <direction>down1</direction>
          <source>src/vooga/turnbased/resources/image/player/Down2.png</source>
          <direction>down2</direction>
          <source>src/vooga/turnbased/resources/image/player/Left.png</source>
          <direction>left</direction>
          <source>src/vooga/turnbased/resources/image/player/Left1.png</source>
          <direction>left1</direction>
          <source>src/vooga/turnbased/resources/image/player/Left2.png</source>
          <direction>left2</direction>
          <source>src/vooga/turnbased/resources/image/player/Right.png</source>
          <direction>right</direction>
          <source>src/vooga/turnbased/resources/image/player/Right1.png</source>
          <direction>right1</direction>
          <source>src/vooga/turnbased/resources/image/player/Right2.png</source>
          <direction>right2</direction>
          <source>src/vooga/turnbased/resources/image/player/Up.png</source>
          <direction>up</direction>
          <source>src/vooga/turnbased/resources/image/player/Up1.png</source>
          <direction>up1</direction>
          <source>src/vooga/turnbased/resources/image/player/Up2.png</source>
          <direction>up2</direction>
        </param>
      </object>
    </player>
  </spriteDeclarations>
</rpggame>